<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="mainPane" prefHeight="400.0" prefWidth="650.0" stylesheets="@main.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.tetris.SceneDbController">
   <children>
      <Label layoutX="230.0" layoutY="40.0" text="TETRIS" textFill="#909090">
         <font>
            <Font name="Copperplate Gothic Bold" size="48.0" />
         </font>
      </Label>
      <TextField fx:id="id" layoutX="15.0" layoutY="310.0" prefHeight="30.0" prefWidth="175.0" promptText="ID 입력">
         <cursor>
            <Cursor fx:constant="TEXT" />
         </cursor></TextField>
      <PasswordField fx:id="pw" layoutX="15.0" layoutY="350.0" prefHeight="30.0" prefWidth="175.0" promptText="비밀번호 입력" />
      <Pane layoutX="190.0" layoutY="330.0" prefHeight="60.0" prefWidth="200.0">
         <children>
            <Button fx:id="loginButton" layoutX="14.0" layoutY="10.0" mnemonicParsing="false" onAction="#login" prefHeight="40.0" prefWidth="80.0" styleClass="btn" text="로그인">
               <font>
                  <Font size="14.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor></Button>
            <Button fx:id="signPopBtn" layoutX="106.0" layoutY="10.0" mnemonicParsing="false" onAction="#signPopup" prefHeight="40.0" prefWidth="80.0" styleClass="btn" text="회원가입">
               <font>
                  <Font size="14.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor></Button>
         </children>
      </Pane>
      <Button fx:id="helpPopBtn" layoutX="525.0" layoutY="291.0" mnemonicParsing="false" onAction="#helpPopup" prefHeight="25.0" prefWidth="110.0" styleClass="btn" text="도움말">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
      <Button fx:id="mainCloseBtn" layoutX="525.0" layoutY="340.0" mnemonicParsing="false" onAction="#mainClose" prefHeight="40.0" prefWidth="110.0" styleClass="btn" text="게임 종료">
         <font>
            <Font size="14.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
   </children>
</AnchorPane>
