<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="mainPane" prefHeight="400.0" prefWidth="300.0" stylesheets="@signUp.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.tetris.SceneDbController">
   <children>
      <Label layoutX="102.0" layoutY="35.0" text="회원가입" textFill="#a8a8a8">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <TextField fx:id="id" layoutX="60.0" layoutY="100.0" prefHeight="30.0" prefWidth="180.0" promptText="사용하실 아이디 입력">
         <cursor>
            <Cursor fx:constant="TEXT" />
         </cursor></TextField>
      <PasswordField fx:id="pw" layoutX="60.0" layoutY="155.0" prefHeight="30.0" prefWidth="180.0" promptText="사용하실 비밀번호 입력">
         <cursor>
            <Cursor fx:constant="TEXT" />
         </cursor></PasswordField>
      <TextField fx:id="nickname" layoutX="60.0" layoutY="210.0" prefHeight="30.0" prefWidth="180.0" promptText="사용자의 이름 입력">
         <cursor>
            <Cursor fx:constant="TEXT" />
         </cursor></TextField>
      <Button fx:id="signCloseBtn" layoutX="60.0" layoutY="275.0" mnemonicParsing="false" onAction="#signClose" styleClass="btn" text="돌아가기">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
      <Label layoutX="14.0" layoutY="371.0" text="! 아이디는 중복될 수 없습니다." textFill="#a8a8a8" />
      <Button fx:id="joinButton" layoutX="160.0" layoutY="275.0" mnemonicParsing="false" onAction="#insertMember" styleClass="btn" text="회원가입">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
   </children>
</AnchorPane>
